<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tei.com.hchl.MainActivity">

    <LinearLayout
        android:id="@+id/main_content_layout"
        style="@style/activity_background"
        android:gravity="center">

        <TextView
            android:id="@+id/main_series_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="-50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_away_emblem"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:id="@+id/main_away_pitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/main_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|center_vertical"
                android:textColor="@android:color/white"
                android:textSize="65sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="vs"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_home_emblem"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:id="@+id/main_home_pitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/main_game_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="-25dp"
            android:textSize="25sp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/main_setting_button"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_margin="10dip"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/button"
        android:layout_gravity="bottom|right"
        android:alpha="0.6"/>
</FrameLayout>
